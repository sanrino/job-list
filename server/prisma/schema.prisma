generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int           @id @default(autoincrement())
  email String        @unique
  jobs  JobPosition[]
}

model JobPosition {
  id        Int      @id @default(autoincrement())
  company   String
  logo      String?
  new       Boolean?
  featured  Boolean?
  position  String
  role      String?
  level     String?
  contract  String?
  location  String?
  languages String
  tools     String?
  createdAt DateTime @default(now())

  author   User? @relation(fields: [authorId], references: [id])
  authorId Int?
}
